# read only values
MYSQL_DATABASE_NAME="airsonic"

#CALCULATED VALUES
MYSQL_MANAGED_IDENTITY_NAME="${APP_NAME}-sqladminidentity"
WORKLOAD_IDENTITY_NAME="${APP_NAME}-workload-identity"
