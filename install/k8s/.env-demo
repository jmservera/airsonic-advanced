# create a copy of this file and rename it to .env

APP_NAME="airsonic"

# basic resources
SUBSCRIPTION_ID="" # The subscription ID, if you leave this blank, you will be prompted to select a subscription
ACR_NAME="Your Azure Container Registry" # The ACR name
AKS_CLUSTER="your AKS cluster" # The AKS cluster name
RESOURCE_GROUP="airsonic-demo" # Name of new or existing resource group
